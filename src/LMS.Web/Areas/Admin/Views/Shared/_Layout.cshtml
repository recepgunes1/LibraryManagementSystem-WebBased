<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <partial name="~/Areas/PartialViews/_InsertCSS.cshtml"/>
    <partial name="~/Areas/PartialViews/_InsertJS.cshtml"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
        <div class="container">
            <get-home-page class="navbar-brand"></get-home-page>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" is-active-route asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" is-active-route asp-area="Admin" asp-controller="Author" asp-action="Index">Author</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" is-active-route asp-area="Admin" asp-controller="Book" asp-action="Index">Book</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" is-active-route asp-area="Admin" asp-controller="Borrow" asp-action="Index">Borrow</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" is-active-route asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" is-active-route asp-area="Admin" asp-controller="Publisher" asp-action="Index">Publisher</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" is-active-route asp-area="Admin" asp-controller="User" asp-action="Index">User</a>
                    </li>
                </ul>
                <partial name="~/Areas/PartialViews/_UserOperations.cshtml"/>
            </div>
        </div>
    </nav>
</header>
<div class="container-fluid">
    @RenderBody()
    @await Component.InvokeAsync("NToastNotify")
</div>
@await RenderSectionAsync("Scripts", false)
</body>
</html>