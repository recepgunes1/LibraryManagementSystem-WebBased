@model CreateCategoryViewModel

@{
    ViewData["Title"] = "Create a New Category";
}

<div class="row">
    <div class="col-md-6 offset-md-3 my-3 border-bottom">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="col-md-6 offset-md-3">
        <form asp-area="Admin" asp-controller="Category" asp-action="Create" method="post">

            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Name"/>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="BackStory" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea class="form-control" rows="3" asp-for="BackStory"></textarea>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="ParentCategoryId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="ParentCategoryId" asp-items="@(new SelectList(Model.Parents, "Key", "Value"))" class="form-select">
                        <option value="">Please select</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary w-50">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>