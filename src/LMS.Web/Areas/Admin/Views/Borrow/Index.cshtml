@{
    ViewBag.Title = "Borrows";
}
@{
    ViewData["Title"] = "Categories";
}
<div class="row">
    <div class="col-md-10 offset-md-1 mt-5">
        <table id="borrows" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>User</th>
                <th>Book</th>
                <th>IsReturned</th>
                <th>IsApproved</th>
                <th>BorrowDateTime</th>
                <th>ReturnDateTime</th>
                <th>Operations</th>
            </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#borrows").DataTable({
                responsive: true,
                processing: true,
                ajax: {
                    url: '@Url.Action("Get", "Borrow", new { Area = "Admin" })',
                    dataSrc: ''
                },
                columns: [
                    {data: "user"},
                    {data: "book"},
                    {data: "isReturned"},
                    {data: "isApproved"},
                    {data: "borrowDateTime"},
                    {data: "returnDateTime"},
                    {
                        data: null,
                        render: function(data, type, row) {
                            return `<a class="btn btn-success mx-2" href="${row.approveLink}">Aprove</a>`;
                        },
                    }
                ]
            });
        });
    </script>
}