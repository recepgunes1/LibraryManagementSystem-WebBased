<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <partial name="~/Areas/PartialViews/_InsertCSS.cshtml"/>
</head>
<body>
<header>
    @if (User.Identity!.IsAuthenticated)
    {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container">
                <span class="navbar-brand">Library</span>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Home" asp-controller="Book" asp-action="List">All Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Home" asp-controller="Book" asp-action="List">My Books</a>
                        </li>
                    </ul>
                    <partial name="~/Areas/PartialViews/_UserOperations.cshtml"/>
                </div>
            </div>
        </nav>
    }
</header>
<div class="container">
    @RenderBody()
    @await Component.InvokeAsync("NToastNotify")
</div>

<partial name="~/Areas/PartialViews/_InsertJS.cshtml"/>
</body>
</html>