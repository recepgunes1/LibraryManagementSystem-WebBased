@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="col-md-6 offset-md-3 my-5">
    <div class="card">
        <div class="card-header text-center">
            <h3>Sign In</h3>
        </div>
        <div class="card-body">
            <form asp-area="Account" asp-controller="Auth" asp-action="Login" method="post">
                <!-- Email -->
                <div class="form-group row mb-3">
                    <label asp-for="EmailOrUsername" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="EmailOrUsername" class="form-control" value="111111111">
                    </div>
                </div>

                <!-- Password -->
                <div class="form-group row mb-3">
                    <label asp-for="Password" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Password" class="form-control" value="Admin123.">
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <div class="col">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input asp-for="IsRememberMe" class="form-check-input" type="checkbox"/>
                            <label asp-for="IsRememberMe" class="form-check-label"></label>
                        </div>
                    </div>

                    <div class="col d-flex justify-content-end">
                        <a class="btn btn-outline-secondary w-50" asp-area="Account" asp-controller="Auth" asp-action="ResetPassword">Reset Password</a>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-primary btn-block w-100">Sign in</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="card-footer text-muted font-weight-bold">
            <span><a asp-area="Account" asp-controller="Auth" asp-action="Register">Sign up</a>, if you don't have an account.</span>
        </div>
    </div>
    <partial name="~/Areas/PartialViews/_DismissibleErrorSummary.cshtml"/>
</div>