@model IEnumerable<IndexBookViewModel>
@{
    ViewData["Title"] = "List Book";
}
<div class="row">
    <div class="col-md-10 offset-md-1 mt-5">
        <table id="books" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Name</th>
                <th>Author</th>
                <th>Category</th>
                <th>Publisher</th>
                <th>Operations</th>
            </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#books").DataTable({
                responsive: true,
                processing: true,
                ajax: {
                    url: '@Url.Action("GetBorrowable", "Book", new { Area = "Home" })',
                    dataSrc: ''
                },
                columns: [
                    {data: "name"},
                    {data: "author"},
                    {data: "category"},
                    {data: "publisher"},
                    {
                        data: null,
                        render: function(data, type, row) {
                            return `<a class="btn btn-success mx-2" href="${row.borrowLink}">Borrow</a>`+
                                 `<a class="btn btn-primary" href="${row.detailLink}">See Detail</a>`;
                        },
                    }
                ]
            });
        });
    </script>
}